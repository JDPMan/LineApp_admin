extends layout

block content
    .userContainer
        p.headerText ADD/CHANGE USER
        .newUser
            form#newUserForm(action="/submit")
                .fieldContainer
                    label FIRST NAME
                    input(type="text" placeholder="First Name" name="firstName")
                .fieldContainer
                    label LAST NAME
                    input(type="text" placeholder="Last Name" name="lastName")
                .fieldContainer
                    label COUNTRY
                    select(type="text" placeholder="Country" name="country")
                        option(value="") - Country -
                        each country in countries
                            option(val=country) #{country.name}
                .fieldContainer
                    label LANGUAGE(S)
                    input(type="text" placeholder="Language(s)" name="languages")
                .fieldContainer
                    label DATE OF BIRTH
                    input#datepicker(type="text" placeholder="Date of Birth" name="dateOfBirth")
                .fieldContainer
                    label DISCLAIMER ACKNOWLEDGED
                    input(type="checkbox" name="disclaimer")
                .fieldContainer
                    //- Used for determining which database collection to insert to (users) 
                    input.hidden(type="text" value="users" name="type")
                .clearFloat
        button#formSubmit(style="float:right; margin-top: 10px;") Submit
        button#addFamily.addFamilyButton(style="float:right; margin: 10px 10px 0 0 ") Add Family Member

        .familyMembersContainer.hidden
            p.headerText ADD/CHANGE FAMILY MEMBERS
                .familyList
            button#addAnother(style="float:right; margin-top: 10px;") Add Another

        
        
        p.headerText USERS
        .usersList
            each user in users
                -var dateStrDC = "NA"
                -var dateStrDOB = "NA"
                -if(typeof user.dateCreated !== 'undefined' && user.dateCreated !== "")
                    -var year = user.dateCreated.getFullYear()
                    -var month = user.dateCreated.getMonth()
                    -var date = user.dateCreated.getDate()
                    -dateStrDC = month + "/" + date + "/" + year
                -if(typeof user.dateOfBirth !== 'undefined' && user.dateOfBirth !== "")
                    -var year = user.dateOfBirth.getFullYear()
                    -var month = user.dateOfBirth.getMonth()
                    -var date = user.dateOfBirth.getDate()
                    -dateStrDOB = month + "/" + date + "/" + year
                .listUser
                    p.strong.firstName=user.firstName
                    p.strong.lastName=user.lastName
                    p.country=user.country
                    p.languages=user.languages
                    p.dateOfBirth DOB: #{dateStrDOB}
                    p.dateCreated Created: #{dateStrDC}
                    p.hidden._id=user._id
                    span.deleteUser(style="float:right; font-size: 30px; padding-right: 20px;") &times;
                    .clearFloat

        .familyTemplate.newUser.hidden(style="margin-top:20px;")
            form
                .fieldContainer
                    label FIRST NAME
                    input(type="text" placeholder="First Name" name="firstName")
                .fieldContainer
                    label LAST NAME
                    input(type="text" placeholder="Last Name" name="lastName")
                .fieldContainer
                    label COUNTRY
                    select(type="text" placeholder="Country" name="country")
                        option(value="") - Country -
                        each country in countries
                            option(val=country) #{country.name}
                .fieldContainer
                    label LANGUAGE(S)
                    input(type="text" placeholder="Language(s)" name="languages")
                .fieldContainer
                    label DATE OF BIRTH
                    input#datepicker(type="text" placeholder="Date of Birth" name="dateOfBirth")
                .fieldContainer
                    label DISCLAIMER ACKNOWLEDGED
                    input(type="checkbox" name="disclaimer")
                .fieldContainer
                    //- Used for determining which database collection to insert to (users) 
                    input.hidden(type="text" value="users" name="type")
                .clearFloat

        
        .userTemplate.listUser.hidden
            p.strong.firstName
            p.strong.lastName
            p.country
            p.languages
            p.dateOfBirth
            p.dateCreated
            p.hidden._id
            span.deleteUser(style="float:right; font-size: 30px; padding-right: 20px;") &times;
            .clearFloat

    script(type='text/javascript').
        $(function(){
            $('#datepicker').datetimepicker({ //documentation: http://xdsoft.net/jqplugins/datetimepicker/
                format:'m/d/Y',
                timepicker:false,
                closeOnDateSelect:true,
            });
        });

        $('#addFamily, #addAnother').on('click',function(){
            $('.familyMembersContainer').removeClass('hidden');
            insertMember();
        })
        var insertMember = function(){
            var $newFamilyMember = $('.familyTemplate').clone().removeClass('hidden familyTemplate').addClass('familyMember');
            $newFamilyMember.find('form').attr('id', 'newUserForm')
            var famNum = $('.familyMember').length;
            $newFamilyMember.find('input, select').each(function(input){
                var indexedName = '' + famNum + '-' + $(this).attr('name');
                $(this).attr('name',indexedName)
            })

            // Date picker not working on family members. Need to investigate more
            var dateId = "datepicker"+famNum;
            $newFamilyMember.find('input#datepicker').removeAttr('id').attr('id',dateId)
            $('#' + dateId).datetimepicker({ //documentation: http://xdsoft.net/jqplugins/datetimepicker/
                format:'m/d/Y',
                timepicker:false,
                closeOnDateSelect:true,
            });
            $('.familyList').append($newFamilyMember);
        }

        $('.deleteUser').on('click',function(){
            if(confirm("Are you sure you want to delete this user?")){
                var id = $(this).parent().find('._id').text();
                $(this).parent().remove()
                var data = {_id: id, collection: "users"};
                $.ajax({
                    type:"POST",
                    url:"/userManagement/deleteRecord",
                    data:data,
                    success:function(data){
                        toastr.success("User has been successfully deleted.")
                    },
                    dataType:"json"
                })
            }
        })

        $('#formSubmit').on('click',function(){
            var data = $('form#newUserForm').serialize();
            $.ajax({
                type:"POST",
                url:"/userManagement/submitUser",
                data:data,
                success:function(data){
                    // Add failure prompt
                    toastr.success("User has been successfully added!")
                    appendToList(data.user);
                },
                dataType:"json"
            })
        })

        function appendToList(user){
            var $newUser = $('.userTemplate').clone().removeClass('userTemplate hidden')
            for(key in user){
                if(key === "dateCreated" && user[key] !== ''){
                    var date = new Date(user[key]);
                    var year = date.getFullYear();
                    var month = date.getMonth() + 1;
                    var date = date.getDate();
                    dateStr = month + "/" + date + "/" + year
                    $newUser.find('.'+key).text("Created: " + dateStr)
                }else if(key === "dateOfBirth"){
                    var date = new Date(user[key]);
                    var year = date.getFullYear();
                    var month = date.getMonth() + 1;
                    var date = date.getDate();
                    dateStr = month + "/" + date + "/" + year
                    if(user[key] === '')
                        dateStr = "N/A"
                    $newUser.find('.'+key).text("DOB: " + dateStr)
                }else{
                    $newUser.find('.'+key).text(user[key])
                }
            }
            $('.usersList').append($newUser)
        }